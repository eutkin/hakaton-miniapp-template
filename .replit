modules = ["nodejs-20", "deno-2.1", "deno-2"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Documentation"

[[workflows.workflow]]
name = "Documentation"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "deno run --allow-net --allow-read --allow-env docs-server.ts"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
